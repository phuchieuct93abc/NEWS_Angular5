  },
  "homepage": "https://github.com/phuchieuct93abc/NEWS_Angular5#readme",
  "dependencies": {
    "connect-timeout": "^1.9.0",
    "http-proxy": "^1.17.0",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5"
  }
}
