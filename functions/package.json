{
  "name": "functions",
  "scripts": {
    "setup": "npm install",
    "build": "tsc",
    "watch": "tsc --watch",
    "server": "nodemon dist/functions/src/index.js",
    "serve": "npm-run-all --parallel watch server",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test-init": "./node_modules/jasmine/bin/jasmine.js init",
    "test": "nodemon --ext ts --exec 'jasmine-ts \"spec/**/*.spec.ts\"'"
  },
  "main": "dist/functions/src/index.js",
  "dependencies": {
    "axios": "^0.18.0",
    "compression": "^1.7.3",
    "connect-timeout": "^1.9.0",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "expressjs": "^1.0.1",
    "firebase-admin": "^6.0.0",
    "firebase-functions": "^2.1.0",
    "http-proxy": "^1.17.0",
    "jsdom": "^13.0.0",
    "moment": "^2.23.0",
    "newsapi": "^2.4.0",
    "ngx-moment": "^3.3.0",
    "npm-run-all": "^4.1.5",
    "request": "^2.88.0",
    "sharp": "^0.21.1",
    "typescript": "^3.2.2"
  },
  "devDependencies": {
    "@types/jasmine": "^3.3.9",
    "@types/node": "^10.12.12",
    "jasmine": "^3.3.1",
    "jasmine-core": "^3.3.0",
    "jasmine-ts": "^0.3.0",
    "karma": "^4.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^2.0.1",
    "nodemon": "^1.18.10",
    "ts-node": "^8.0.2",
    "typescript": "~2.8.3"
  },
  "private": true
}
