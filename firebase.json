{
  "functions": {
    "predeploy": "npm --prefix \"functions\" run build"
  },
  "hosting": {
    "predeploy": "npm --prefix \"client\" run-script build",

    "public": "client/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
